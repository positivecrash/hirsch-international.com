        script(src="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.min.js")

        script.
            var
                item = ".works__item",
                info = ".works__info",
                active = "active";

            $(item).on( "click", function( event ) {
                event.stopPropagation();

                $(info).removeClass(active);

                var
                    data = $(this).next(info),
                    page = $(this).data("page");

                data.addClass(active);
                data.children(".data").load(page + " #ajax_container", function(){
                    $('.slider').bxSlider({
                        adaptiveHeight: true,
                        nextText: '<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="19.4px" height="40.8px" viewBox="0 0 19.4 40.8" style="enable-background:new 0 0 19.4 40.8;" xml:space="preserve"><path id="Path_5441" class="st0" d="M2.1,2.1l15.4,18.3L2.1,38.7"/></svg>'
                    });
                });

            });

            $(".works__info .close").on( "click", function( event ) {
                event.stopPropagation();
                $(this).parent(info).removeClass(active);
            });
