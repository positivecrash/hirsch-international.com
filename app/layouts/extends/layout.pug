doctype html

block html
html(lang='en', class=page_layout)
	
	head
		meta(http-equiv="Content-Type" content="text/html;charset=UTF-8")
		meta(name='viewport' content="width=device-width, initial-scale=1, shrink-to-fit=no")

		title #{meta_title} / Hirsch International GMBH

		link(href='assets/css/website_styles.min.css?v=1' rel='stylesheet')
		script(src='assets/js/website_plugins.min.js?v=1')

		link(rel="icon" href="favicon.ico" type="image/x-icon")
		link(rel="shortcut icon" href="favicon.ico" type="image/x-icon")
		link(rel="apple-touch-icon" sizes="114x114" href="apple-touch-icon-114x114.png")
		link(rel="apple-touch-icon" sizes="72x72" href="apple-touch-icon-72x72.png")

	body

		if page_layout == 'home'
			include ../includes/header-home.pug
			main.home(role="main")
				block content
			include ../includes/footer-default.pug

		
		if page_layout == 'default'
			include ../includes/header-default.pug
			main.home(role="main")
				block content
			include ../includes/footer-default.pug